														<td class="text-center">{{ render((url('region_objectif',{'region': region.id}))) }}</td>
														{{ render(url('region_taux',{'slug': region.slug})) }}
														<td class="text-center">{{ render(url('totaux_region_statut',{'statut':'Jeune', 'slug':region.slug})) }}</td>
