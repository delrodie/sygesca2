{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Gestion des districts{% endblock %}
{% block body %}
    <section class="admin-content">
        <div class="bg-dark">
            <div class="container  m-b-30">
                <div class="row">
                    <div class="col-12 text-white p-t-40 p-b-90">
                        <h4 class="">  Gestion des districts</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="container  pull-up">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Enregistrement</h5>
                        </div>
                        <div class="card-body ">
                            {{ form_start(form)}}
                            <div class="form-row">
                                <div class="col-4 form-group">
                                    {{ form_widget(form.groupe)}}
                                    {{ form_errors(form.groupe)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.statut)}}
                                    {{ form_errors(form.statut)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.nom)}}
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-4 form-group">
                                    {{ form_widget(form.prenoms)}}
                                    {{ form_errors(form.prenoms)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.datenaiss)}}
                                    {{ form_errors(form.datenaiss)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.lieunaiss)}}
                                    {{ form_errors(form.lieunaiss) }}
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-4 form-group">
                                    {{ form_widget(form.contact)}}
                                    {{ form_errors(form.contact)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.contactParent)}}
                                    {{ form_errors(form.contactParent)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.email)}}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-4 form-group">
                                    {{ form_widget(form.sexe)}}
                                    {{ form_errors(form.sexe)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.branche)}}
                                    {{ form_errors(form.branche)}}
                                </div>
                                <div class="col-4 form-group">
                                    {{ form_widget(form.fonction)}}
                                    {{ form_errors(form.fonction) }}
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-primary">Enregistrer</button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ absolute_url(asset('ressources/assets/bundles/ba78fede76f682cd388ed2abbfd1e1568e76f8a4.js')) }}'></script>
{% endblock %}
