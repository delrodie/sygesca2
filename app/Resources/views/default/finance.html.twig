{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Liste des inscrits{% endblock %}
{% block body %}
    <section class="admin-content">
        <div class="bg-dark">
            <div class="container  m-b-30">
                <div class="row">
                    <div class="col-md-8 text-white p-t-40 p-b-90">
                        <h4 class="">  Liste des inscrits</h4>
                    </div>
                    <div class="col-md-4 text-white p-t-40 p-b-90 text-right">
                        <h2 class="h2">{{ montant|number_format(0,'','.') }} FCFA</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="container  pull-up">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Liste des inscits</h5>
                        </div>
                        <div class="card-body ">
                            <div class="table-responsive p-t-10">
                                <table id="example" class="table   " style="width:100%">
                                    <thead>
                                    <tr>
                                        <td>ID</td>
                                        <td>Regions</td>
                                        <td>Nom & prenoms</td>
                                        <td>Sexe</td>
                                        <td>Statut</td>
                                        <td>Fonctions</td>
                                        <td>Montants</td>
                                        <td>Ristournes</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% set taux = 0.036 %} {% set val = 0 %}
                                    {% for cotisation in cotisations %}
                                        <tr>
                                            <td>{{ loop.index }}
                                            <td>{{ cotisation.scout.groupe.district.region.nom }}</td>
                                            <td>{{ cotisation.scout.nom }} {{ cotisation.scout.prenoms }} (<span style="font-size: 0.9em; font-weight: bold;">{{ cotisation.carte }}</span>)</td>
                                            <td>{{ cotisation.scout.sexe }}</td>
                                            <td>{{ cotisation.scout.statut.libelle }}</td>
                                            <td>{{ cotisation.scout.fonction }}</td>
                                            <td class="text-right">{{cotisation.montantSansFrais}}</td>
                                            <td class="text-right">{{cotisation.ristourne}}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--widget card ends-->


                </div>
            </div>


        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ absolute_url(asset('ressources/assets/bundles/ba78fede76f682cd388ed2abbfd1e1568e76f8a4.js')) }}'></script>
{% endblock %}
